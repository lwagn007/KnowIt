@model IEnumerable<KnowIt.Models.Physician.PhysicianListItem>

@{
    ViewBag.Title = "Index";
}

<div class="panel transparent">
    <div class="tablespace">
        <h2>Index</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <hr />
        <table class="table table-responsive" table-hover>
            <thead class="bg-primary">
                <tr>
                    <th>
                        Physician First Name
                    </th>
                    <th>
                        Physician Last Name
                    </th>
                    <th>
                        Physician Specialty
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr class="info">
                    <td>
                        @Html.DisplayFor(modelItem => item.PhysicianFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhysicianLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialty)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PhysicianId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PhysicianId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PhysicianId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>